# Server Configuration
PORT=3000
NODE_ENV=development
COOKIE_DOMAIN=localhost
DB_SCHEMA=public

# Database Configuration (Aiven PostgreSQL)
DB_HOST=enter_your_db_host
DB_PORT=enter_your_db_port
DB_NAME=enter_your_db_name
DB_USER=enter_your_db_user
DB_PASSWORD=enter_your_db_password
DB_SSL=true
DB_CA_CERT=enter_your_ca_cert_if_needed
DB_POOL_MAX=20

# Email Configuration (Zoho SMTP)
SMTP_HOST=enter_your_smtp_host
SMTP_PORT=enter_your_smtp_port
SMTP_USER=enter_your_smtp_user
SMTP_PASSWORD=enter_your_smtp_password
SMTP_FROM=enter_your_smtp_from
ADMIN_EMAIL=enter_your_admin_email

# Security
JWT_SECRET=enter_your_jwt_secret
SESSION_SECRET=enter_your_session_secret
ENCRYPTION_KEY=enter_your_encryption_key

# Application URL (for self-ping and redirects)
APP_URL=http://localhost:3000

# Admin User (for initial setup)
# ADMIN_EMAIL=enter_your_admin_email (duplicated)
ADMIN_PASSWORD=enter_your_admin_password

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Self-ping Configuration
PING_MIN_INTERVAL_MINUTES=4
PING_MAX_INTERVAL_MINUTES=13